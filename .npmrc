# NPM Configuration for Vercel Deployment
# Handle peer dependency conflicts gracefully
legacy-peer-deps=true
auto-install-peers=true

# Platform-specific dependencies
target_platform=linux
target_arch=x64

# Ensure consistent package resolution
package-lock=true
shrinkwrap=false

# Performance optimizations
prefer-offline=true
audit=false
fund=false

# Skip optional dependencies that might cause platform issues
optional=false
