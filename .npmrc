# NPM Configuration for Vercel Deployment
# Handle peer dependency conflicts gracefully
legacy-peer-deps=true

# Package resolution
package-lock=true
shrinkwrap=false

# Network and performance optimizations
prefer-offline=false
audit=false
fund=false
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-timeout=120000

# Network stability settings
registry=https://registry.npmjs.org/
strict-ssl=true
